
<%= render 'partials/modals' %>
<%= render 'partials/sidebar', locals: {category: :pages} %>
<%= render 'partials/sidebar-sm', locals: {category: :pages} %>
<%= render 'partials/topnav', locals: {category: :pages} %>
<div class="main-content">

<%= render 'partials/topbar' %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-12">
      
      <!-- Header -->
      <div class="header">
        <div class="header-body">
          <div class="row align-items-center">
              <div class="col-auto">

                <!-- Avatar -->
                <a href="#!" class="avatar avatar-lg">
                    <span class="avatar-title rounded bg-white text-secondary">
                      <span class="fe fe-dollar-sign"></span>
                    </span>
                  </a>

              </div>
              <div class="col ml-n3 ml-md-n2">
                
                <!-- Pretitle -->
                <h6 class="header-pretitle">
                  Wallet
                </h6>

                <!-- Title -->
                <h2 class="header-title">
                  Cashback
                </h2>

              </div>
              
            </div>
          <div class="row align-items-center">
            <div class="col">
              
              

            </div>
          </div>
        </div>
      </div>

      <!-- Form -->

      <div class="row mt-4">
          <div class="col-12 col-xl-8">
            
            <div class="card card-inactive">
              <div class="card-body text-center">

                <!-- Image -->
                <img src="<%= asset_pack_path 'media/images/illustrations/earn.svg' %>" alt="..." class="img-fluid mb-4 mt-1" style="max-width: 182px;">
                
                <!-- Title -->
                <h2>
                  Get cashback automatically as you spend
                </h2>

                <!-- Subtitle -->

                <p class="text-muted">
                  Link your card and get cashback as you spend with our selected partners
                </p>

                <!-- Button -->
                <a href="#!" class="btn btn-primary">
                  Learn more
                </a>

              </div>
            </div>
          </div>

            <div class="col-12 col-xl-4">

              <a href="#!" class="btn btn-primary btn-block mb-4">
                  Withdraw your balance
                </a>
              
              <div class="card">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col-12 col-lg-4 order-lg-2">
                      
                          <!-- Image -->
                          <div class="text-center">
                            <img src="<%= asset_pack_path 'media/images/illustrations/shop.svg' %>" alt="..." class="img-fluid mt-n5 mt-lg-0 mb-4 mr-md-n5" style="max-width: 72px;">
                          </div>

                        </div>
                        <div class="col-12 col-lg-8 px-4 py-3 order-lg-1">
                          
                          <!-- Title -->
                          <h2>
                            Spend your cashback
                          </h2>

                          <!-- Content -->
                          <p class="text-muted">
                            Explore our marketplace and spend your balance on the the things that matter most
                          </p>

                          <!-- Button -->
                          <a href="#!" class="btn btn-primary">
                            Explore marketplace
                          </a>

                        </div>
                      </div> <!-- / .row -->
                    </div>
                  </div>

                   <div class="card">
                    <div class="card-body">
                      <div class="row align-items-center">
                        <div class="col-12 col-lg-4 order-lg-2">
                      
                          <!-- Image -->
                          <div class="text-center">
                            <img src="<%= asset_pack_path 'media/images/illustrations/save.svg' %>" alt="..." class="img-fluid mt-n5 mt-lg-0 mb-4 mr-md-n5" style="max-width: 72px;">
                          </div>

                        </div>
                        <div class="col-12 col-lg-8 px-4 py-3 order-lg-1">
                          
                          <!-- Title -->
                          <h2>
                            Invest your cashback
                          </h2>

                          <!-- Content -->
                          <p class="text-muted">
                            Use Perkbox Invest to invest your cashback and watch it grow
                          </p>

                          <!-- Button -->
                          <a href="#!" class="btn btn-primary">
                            Learn more
                          </a>

                        </div>
                      </div> <!-- / .row -->
                    </div>
                  </div>


            

          </div>
        </div>
      

    </div>
  </div> <!-- / .row -->

</div>

</div>
